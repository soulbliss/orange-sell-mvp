  "license": "ISC",
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "axios": "^0.20.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql-tools": "^6.2.5",
    "graphql-yoga": "^1.18.3",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^5.10.9",
    "react-images-upload": "^1.2.8"
  },
  "devDependencies": {
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5"
  }
